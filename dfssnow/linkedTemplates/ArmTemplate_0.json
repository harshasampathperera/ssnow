{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dfssnow"
		},
		"LinkedService_Sql_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LinkedService_Sql'"
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_ServerNamePIP": {
			"type": "string",
			"defaultValue": "."
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_DBNamePIP": {
			"type": "string",
			"defaultValue": "School"
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_UserNamePIP": {
			"type": "string",
			"defaultValue": "sa"
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_PasswordPIP": {
			"type": "string",
			"defaultValue": "p@ssw0rd"
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_TableNamePIP": {
			"type": "string",
			"defaultValue": "Course"
		},
		"Trigger_Copy_properties_TableCopyToCopy_parameters_TableNameToPip": {
			"type": "string",
			"defaultValue": "Course1"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/IROnpromise')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "SelfHosted",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/LinkedService_Sql')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"ServerName": {
						"type": "string"
					},
					"dbName": {
						"type": "string"
					},
					"UserName": {
						"type": "string"
					},
					"Password": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "SqlServer",
				"typeProperties": {
					"connectionString": "[parameters('LinkedService_Sql_connectionString')]"
				},
				"connectVia": {
					"referenceName": "IROnpromise",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/integrationRuntimes/IROnpromise')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DataSet_ForAll')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "LinkedService_Sql",
					"type": "LinkedServiceReference",
					"parameters": {
						"ServerName": {
							"value": "@dataset().ServerNameDS",
							"type": "Expression"
						},
						"dbName": {
							"value": "@dataset().DBNameDS",
							"type": "Expression"
						},
						"UserName": {
							"value": "@dataset().NameDS",
							"type": "Expression"
						},
						"Password": {
							"value": "@dataset().PasswordDS",
							"type": "Expression"
						}
					}
				},
				"parameters": {
					"ServerNameDS": {
						"type": "string"
					},
					"DBNameDS": {
						"type": "string"
					},
					"NameDS": {
						"type": "string"
					},
					"PasswordDS": {
						"type": "string"
					},
					"tableName": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [],
				"typeProperties": {
					"schema": "dbo",
					"table": {
						"value": "@dataset().tableName",
						"type": "Expression"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/LinkedService_Sql')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/TableCopyToCopy')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "SqlServerSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "DataSet_ForAll",
								"type": "DatasetReference",
								"parameters": {
									"ServerNameDS": {
										"value": "@pipeline().parameters.ServerNamePIP",
										"type": "Expression"
									},
									"DBNameDS": {
										"value": "@pipeline().parameters.DBNamePIP",
										"type": "Expression"
									},
									"NameDS": {
										"value": "@pipeline().parameters.UserNamePIP",
										"type": "Expression"
									},
									"PasswordDS": {
										"value": "@pipeline().parameters.PasswordPIP",
										"type": "Expression"
									},
									"tableName": {
										"value": "@pipeline().parameters.TableNamePIP",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "DataSet_ForAll",
								"type": "DatasetReference",
								"parameters": {
									"ServerNameDS": {
										"value": "@pipeline().parameters.ServerNamePIP",
										"type": "Expression"
									},
									"DBNameDS": {
										"value": "@pipeline().parameters.DBNamePIP",
										"type": "Expression"
									},
									"NameDS": {
										"value": "@pipeline().parameters.UserNamePIP",
										"type": "Expression"
									},
									"PasswordDS": {
										"value": "@pipeline().parameters.PasswordPIP",
										"type": "Expression"
									},
									"tableName": {
										"value": "@pipeline().parameters.TableNamePIP",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"ServerNamePIP": {
						"type": "string"
					},
					"DBNamePIP": {
						"type": "string"
					},
					"UserNamePIP": {
						"type": "string"
					},
					"PasswordPIP": {
						"type": "string"
					},
					"TableNamePIP": {
						"type": "string"
					},
					"TableNameToPip": {
						"type": "string"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DataSet_ForAll')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Trigger_Copy')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "TableCopyToCopy",
							"type": "PipelineReference"
						},
						"parameters": {
							"ServerNamePIP": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_ServerNamePIP')]",
							"DBNamePIP": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_DBNamePIP')]",
							"UserNamePIP": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_UserNamePIP')]",
							"PasswordPIP": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_PasswordPIP')]",
							"TableNamePIP": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_TableNamePIP')]",
							"TableNameToPip": "[parameters('Trigger_Copy_properties_TableCopyToCopy_parameters_TableNameToPip')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Minute",
						"interval": 2,
						"startTime": "2021-08-26T15:44:00Z",
						"timeZone": "UTC"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/TableCopyToCopy')]"
			]
		}
	]
}